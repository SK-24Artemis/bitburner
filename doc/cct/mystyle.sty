%% The cardinality of a set.  The cardinality is the number of
%% elements in a set.
%%
%% #1 := A set.
\newcommand{\Cardinality}[1]{%%
  \left| {#1} \right|%%
}
%%
\newcommand{\Set}[1]{\left\{#1\right\}}
%%
%% A set of the first n primes.
%%
%% #1 := The variable.
%% #2 := The maximum index.
\newcommand{\SetFirstPrimes}[2]{%%
  \Set{%%
    \TupleD{{#1}_1}{{#1}_2}{\dots}{{#1}_{#2}}%%
  }
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Sequences.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% A finite array of indexed values.
%%
%% #1 := The variable.
%% #2 := The largest index.
\newcommand{\Array}[2]{%%
  \left[%%
    \TupleD{{#1}_1}{{#1}_2}{\dots}{{#1}_{#2}}%%
  \right]%%
}
%%
%% An array of 2 values.
%%
%% #1 := The first value.
%% #2 := The second value.
\newcommand{\ArrayB}[2]{%%
  \left[%%
    \TupleB{#1}{#2}%%
  \right]%%
}
%%
%% An array of indexed values, where the values are explicitly given.
%%
%% #1 := The first value.
%% #2 := The second value.
%% #3 := The final value.
\newcommand{\ArrayABZ}[3]{%%
  \left[%%
    \TupleD{#1}{#2}{\dots}{#3}%%
  \right]
}
%%
%% A pair of numbers.
%%
%% #1 := The first element.
%% #2 := The second element.
\newcommand{\Pair}[2]{%%
  \left( \TupleB{#1}{#2} \right)%%
}
%%
%% A finite sequence of indexed values.
%%
%% #1 := The variable.
%% #2 := The maximum index.
\newcommand{\Seq}[2]{%%
  \TupleD{{#1}_1}{{#1}_2}{\dots}{{#1}_{#2}}%%
}
%%
%% A finite sequence, where the values are explicitly given.
%%
%% #1 := The first value.
%% #2 := The second value.
%% #3 := The final value.
\newcommand{\SeqABZ}[3]{%%
  \TupleD{#1}{#2}{\dots}{#3}%%
}
%%
%% A sequence numbers ordered by <.
%%
%% #1 := The variable.
%% #2 := The index.
\newcommand{\Seqlt}[2]{%%
  {#1}_1 < {#1}_2 < \cdots < {#1}_{#2}%%
}
%%
%% A finite sequence of indexed values.  The index starts from zero.
%%
%% #1 := The variable.
%% #2 := The number of indexed variables.  Subtract 1 from this number
%%     to get the value of the largest index.
\newcommand{\Seqz}[2]{%%
  \TupleD{{#1}_0}{{#1}_1}{\dots}{{#1}_{{#2}-1}}%%
}
%%
%% Tuples of numbers.
\newcommand{\TupleB}[2]{%%
  {#1},\, {#2}
}
\newcommand{\TupleC}[3]{%%
  \TupleB{#1}{#2},\, {#3}
}
\newcommand{\TupleD}[4]{%%
  \TupleC{#1}{#2}{#3},\, {#4}
}
\newcommand{\TupleE}[5]{%%
  \TupleD{#1}{#2}{#3}{#4},\, {#5}%%
}

