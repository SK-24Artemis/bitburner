{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "airbnb-base"
    ],
    "plugins": ["prettier"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        // No camelCase.
        "camelcase": [
            "off"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "import/no-absolute-path": [
            "error",
            {
                "commonjs": true
            }
        ],
        "import/prefer-default-export": [
            "off"
        ],
        // Use 4 space indentation.
        "indent": [
            "error",
            4
        ],
        "no-await-in-loop": [
            "off"
        ],
        "no-continue": [
            "off"
        ],
        "no-restricted-syntax": [
            "off"
        ],
        "no-use-before-define": [
            "error", {
                "functions": false
            }
        ],
        "prettier/prettier": "error",
        "quotes": [
            "error",
            "double"
        ]
    }
}
