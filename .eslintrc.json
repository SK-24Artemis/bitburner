{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "airbnb-base"
    ],
    "plugins": ["prettier"],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        // Use 4 space indentation.
        "indent": [
            "error",
            4
        ],
        "prettier/prettier": "error"
    }
}
